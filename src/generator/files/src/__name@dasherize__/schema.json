{
  "$schema": "http://json-schema.org/schema",
  "id": "cliberry-schematics#<%= dasherize(name) %>",
  "title": "cliberry-schematics <%= dasherize(name) %> Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "alias": "n",
      "description": "The name of the project.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "description": {
      "alias": "d",
      "description": "Short description of the project.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": [
    "name",
    "description"
  ]
}

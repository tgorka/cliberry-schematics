{
  "$schema": "http://json-schema.org/schema",
  "id": "cliberry-schematics#generator",
  "title": "cliberry-schematics init Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "alias": "n",
      "description": "The name of the project.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "description": {
      "alias": "d",
      "description": "Short description of the project.",
      "type": "string"
    },
    "alias": {
      "alias": "a",
      "description": "Aliases for a cliberry prefix."
    },
    "parameter": {
      "alias": "p",
      "description": "Parameters for a cliberry prefix."
    }
  },
  "required": [
    "name"
  ]
}
